<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MeasureActivity">

    <TextView
        android:id="@+id/tvMs"
        android:text="Hello World"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:background="#337788bf"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:background="#66abcc44"
        android:padding="20dp"
        android:textSize="24sp"
        android:text="33"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


    <FrameLayout
        android:onClick="onRL"
        android:background="#55669944"
        android:layout_width="200dp"
        android:layout_height="200dp">


        <TextView
            android:background="#55fa44"
            android:onClick="onBt1"
            android:text="点击11"
            android:textSize="26sp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:background="#557788"
            android:onClick="onBt2"
            android:text="点击22"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:onClick="onBt3"
            android:id="@+id/tv3"
            android:background="#995511"
            android:text="点击33"
            android:layout_marginTop="20dp"
            android:textSize="26sp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>


    </FrameLayout>


</LinearLayout>