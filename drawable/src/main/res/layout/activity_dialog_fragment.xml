<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DialogFragmentActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onXml"
        android:text="使用onCreateView,即xml布局展示Dialog" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCreateDialog"
        android:text="继承DialogFragment重写onCreateDialog方法" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onChangeForm"
        android:text="不同屏幕大小的适配,dialog内嵌 or dialog弹出" />


    <FrameLayout
        android:id="@+id/id_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>